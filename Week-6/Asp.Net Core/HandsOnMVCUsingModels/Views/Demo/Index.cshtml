@model List<Book>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @{
        <h2>Book Details</h2>
        foreach (var book in Model)
        {

            <pre>
                             Id:@book.Id
                             Title:@book.Title
                             Author:@book.Author
                             Price:@book.Price
                             </pre>
            <hr />
        }
        if (Model.Count == 0)
        {
            <h2>No Book Found!</h2>
        }
        else
        {
            <table border="1">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Id</td>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.Price</td>
                        </tr>
                    }
                    )
                </tbody>
            </table>
        }
    }
</body>
</html>
